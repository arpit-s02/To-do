<!DOCTYPE html>
<html>
    <head>
        <title> <%= title %></title>

        <script src="https://kit.fontawesome.com/7dbb4126aa.js" crossorigin="anonymous"></script>

        <link rel = "stylesheet" href = "/css/home.css">
    </head>
    <body>
        <div id = "main">
            <h1> To-Do App </h1>
        
            <form action="/add-task" method="post">
                <div id = "task-description">
                    <label for="task" > TASK </label>
                    <!-- <h5> TASK </h5> -->
                    <input type="text" name = "task" placeholder="write the task" id = "task" required>
                </div>
                
                <div id = "task-info">
                    <div id = "category-info">
                        <label for="category" > CATEGORY </label>
                        <select name="category" id = "category">
                            <option value="Personal"> Personal </option>
                            <option value="Work"> Work </option>
                            <option value="School"> School </option>
                        </select>
                    </div>
                    <div id = "date-info">
                        <label for="date" > DATE </label>
                        <input type="date" name="date" id="date" required>
                    </div>
                    
                </div>
    
                <div>
                    <button type="submit" class = "add-button"> 
                        <i class="fa-solid fa-plus"></i> 
                        <span> Add </span> 
                    </button>
                </div>
            </form>
            <div id = "details">
                <form action="/delete-tasks" method="get">
                    <div class = "buttons">
                        <button type = "submit" class = "delete-button">
                            <i class="fa-solid fa-trash"></i>
                            <span> Delete </span> 
                        </button>
                    </div>
                    
                    <ul class = "list">
                        <% for(let i of tasks){ %>
                            <li class = "task-display">
                                <div id = "display-description-date">
                                    <div class = "custom-checkbox">
                                        <input type="checkbox" name = "item" value = "<%= i._id%>">
                                    </div>
                                    <div id = "display-description">
                                        
                                        <span class = "description"> <%= i.description %> </span>

                                        <% var date = i.date %>
                                        <% date = date.toString(); %>
                                        <% date = date.slice(0, 10); %>
                                        <span class = "date">
                                            <i class="fa-solid fa-calendar-days"></i>
                                            <%= date %>
                                        </span>
                                    </div>
                                </div>
                                <div id = "display-category">
                                    <% if(i.category == 'Work'){ %>
                                        <div class = "work">
                                            <span> Work </span>
                                        </div>
                                    <% }else if(i.category == 'Personal'){ %>
                                        <div class = "personal">
                                            <span> Personal </span>
                                        </div>
                                    <% } else if(i.category == 'School'){ %>
                                        <div class = "school">
                                            <span> School </span>
                                        </div>
                                    <% } %>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                </form>
            </div>
        </div>
        

        <script type="text/javascript" src = "/js/home.js"></script>
    </body>
</html>